{{#mensaje_error}}
    <div style="color: red; border: 1px solid red; padding: 10px; margin-bottom: 10px;">
        {{mensaje_error}}
    </div>
{{/mensaje_error}}

<main class="w-full md:w-3/4 p-4 md:p-8 flex flex-col flex-1 overflow-y-auto">

    <div class="max-w-6xl mx-auto w-full"> <div class="flex flex-col md:flex-row justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-800">Gestión de Usuarios y Roles</h2>

        {{#mensaje_exito}}
            <div style="color: green; border: 1px solid green; padding: 10px; margin-top: 10px md:margin-top: 0;">
                {{mensaje_exito}}
            </div>
        {{/mensaje_exito}}
    </div>

        <div class="overflow-x-auto shadow-md rounded-lg bg-white">

            <table class="w-full text-sm text-left text-gray-600">

                <thead class="text-xs text-gray-700 uppercase bg-gray-100 sticky top-0 z-10">
                <tr>
                    <th scope="col" class="px-6 py-3">ID</th>
                    <th scope="col" class="px-6 py-3">Usuario</th>
                    <th scope="col" class="px-6 py-3">Email</th>
                    <th scope="col" class="px-6 py-3">Rol Actual</th>
                    {{#es_admin}}
                        <th scope="col" class="px-6 py-3 text-center">Acción</th>
                    {{/es_admin}}
                </tr>
                </thead>

                <tbody class="divide-y divide-gray-200">
                {{#usuarios}}
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">{{usuarioId}}</td>

                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <span class="font-bold">{{nombre_usuario}}</span>
                            </div>
                        </td>

                        <td class="px-6 py-4 whitespace-nowrap">{{email}}</td>

                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">
                                {{nombre_rol}}
                            </span>
                        </td>

                        {{#es_admin}}
                            <td class="px-6 py-4 whitespace-nowrap text-gray-500">
                                <form action="/editor/cambiarRol" method="POST" class="flex items-center space-x-2 justify-center">
                                    <input type="hidden" name="usuarioId" value="{{usuarioId}}">

                                    <select name="nuevoRol" class="block w-32 py-1 px-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-purple-500 focus:border-purple-500 sm:text-xs">
                                        <option value="1" {{#rol_es_jugador}}selected{{/rol_es_jugador}}>Jugador</option>
                                        <option value="2" {{#rol_es_editor}}selected{{/rol_es_editor}}>Editor</option>
                                        <option value="3" {{#rol_es_admin}}selected{{/rol_es_admin}}>Admin</option>
                                    </select>

                                    <button type="submit" class="inline-flex justify-center py-1 px-3 border border-transparent shadow-sm text-xs font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none">
                                        Cambiar
                                    </button>
                                </form>
                            </td>
                        {{/es_admin}}
                    </tr>
                {{/usuarios}}
                </tbody>
            </table>
        </div>
    </div>
</main>